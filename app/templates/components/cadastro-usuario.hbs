<div class="box box-info">
  <div class="box-header with-border">
    <h3 class="box-title">Horizontal Form</h3>
  </div>

  <div class="form-group">
    <label for="cpf">CPF</label>
    {{input id="cpf" value=dados.cpf class="form-control" placeholder="CPF"}}
  </div>
  <div class="checkbox">
    <label>
      {{input type="checkbox" checked=dados.advogado change=(action "toggleAdvogado")}} Advogado
    </label>
  </div>
  <div id="dadosAdvogado" class="form-group subgrupo collapse {{if mostraInscricao "in"}}">
    {{inscricao-oab uf=dados.ufInscricaoOab inscricao=dados.inscricaoOab}}
  </div>
  <div class="form-group">
    <label for="nome">Nome</label>
    {{input id="nome" value=dados.nome class="form-control" placeholder="Nome"}}
  </div>
  <div class="form-group">
    <label for="">Sexo</label>
    <div class="radio-sexo">
      <label class="radio-inline">
        {{#radio-button id="sexo" value="M" groupValue=dados.sexo}}
          Masculino
        {{/radio-button}}
      </label>
      <label class="radio-inline">
        {{#radio-button id="sexo" value="F" groupValue=dados.sexo}}
          Feminino
        {{/radio-button}}
      </label>
    </div>
  </div>
  <div class="form-group">
    <label for="telefone">Telefone</label>
    {{input id="telefone" value=dados.telefone class="form-control" placeholder="Telefone"}}
  </div>
  <div class="form-group">
    <label for="celular">Celular</label>
    {{input id="celular" value=dados.celular class="form-control" placeholder="Celular"}}
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    {{input id="email" value=dados.email class="form-control" placeholder="Email"}}
  </div>
  <div>
    <label>Recebe notificações:</label>
    <div class="check-notificacoes">
      <div class="checkbox">
        <label>
          {{input type="checkbox" id="noticias" checked=dados.noticias}} Notícias do TJDFT
        </label>
      </div>
      <div class="checkbox">
        <label>
          {{input type="checkbox" id="infoJurisprudencia" checked=dados.infoJurisprudencia}} Informativos da Jurisprudência
        </label>
      </div>
    </div>
  </div>
  <!-- comandos -->
  {{#button-fab onclick=(action "gravar") icone="save"}}Gravar{{/button-fab}}
</div>
